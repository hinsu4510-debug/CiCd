<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="LoanDepartment">

  <test thread-count="5" name="Test">
  <groups>
  <run>
  <include name="software company"></include>
  </run>
  </groups><!--After adding groups only group name test cases will get executed not the class suites test cases also all will is mentioned but only groups test cases execute-->
    <classes>
      
      <class name="com.tfa.vtiger.runner.LoanDepartment">
      <methods>
      <include name="Mobile.*"></include>
      </methods><!--<exclude name="...." will exclude only that and rest will execute-->
      <!--include will only execute that which is written in include -->
      <!-- Mobile.*  will execute all which method name start with Mobile-->
      </class>
      <class name="com.tfa.vtiger.runner.GroupAttribute"/>
      
      <class name="com.tfa.vtiger.runner.TestCase2"/>
      
    </classes>
  </test> <!-- Test -->
</suite> <!-- LoanDepartment -->
